@model List<Employee>
<partial name="_TempData" />

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

</head>
<body>
    <header>
        <div class="container-fluid container text-center">
            <h1 class="bg-primary text-black p-3 fw-bold  d-inline-block rounded">
                Employee Management System
            </h1>
        </div>
        </header>
        <br />
        <br />
        <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">S.No</th>
                <th scope="col">Emp.ID</th>
                <th scope="col">Name</th>
                <th scope="col">DepartmentID</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
                @{
                    int Serial = 1;  
                }
                @foreach (var i in Model){
            <tr>
                <td scope="row">@Serial</td>
                <td>@i.ID</td>
                <td>@i.Name</td>
                <td>@i.DepartmentID</td>
                    <td><a class="btn btn-dark" asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@i.ID" role="button"><i class="bi bi-pencil"></i></a></td>
                    <td><a class="btn btn-danger" asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@i.ID" role="button"><i class="bi bi-trash"></i></a></td>
            </tr>
            Serial++;
                }
        </tbody>
        </table>
    <a class="btn btn-primary" asp-controller="Employee" asp-action="AddEmployee" role="button">Add Employee</a>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index" role="button">Back to Home</a>


</body>